@model TapHoa.Data.Dondathang

@{
    ViewData["Title"] = "Order Confirmation";
}

<h2>Order Confirmation</h2>

<p>Thank you for your order! Your order number is @Model.Maddh.</p>

<h3>Order Details</h3>

<p><strong>Customer Name:</strong> @Model.Tenkh</p>
<p><strong>Address:</strong> @Model.Diachi</p>
<p><strong>Phone Number:</strong> @Model.Sdt</p>
<p><strong>Order Date:</strong> @Model.Ngaydat.ToString("dd/MM/yyyy HH:mm:ss")</p>
<p><strong>Total Amount:</strong> @Model.Tonggia.Value</p>

<h3>Shipping Method</h3>
<p>@Model.MaptvcNavigation.Tenptvc</p>

<h3>Payment Method</h3>
<p>@Model.MaptttNavigation.Tenpttt</p>

<h3>Order Items</h3>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Chitietdondathangs)
        {
            <tr>
                <td>@item.MaspNavigation.Tensp</td>
                <td>@item.Soluong</td>
                <td>@item.MaspNavigation.Gia</td>
                <td>@item.Thanhtien</td>
            </tr>
        }
    </tbody>
</table>
