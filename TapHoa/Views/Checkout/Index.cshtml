@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<form method="post" action="@Url.Action("PlaceOrder", "Checkout")">
    <!-- Customer Information Section -->
    <div>
        <label for="tenkh">Name</label>
        <input type="text" id="tenkh" name="tenkh" required />

        <label for="diachi">Address</label>
        <input type="text" id="diachi" name="diachi" required />

        <label for="sdt">Phone Number</label>
        <input type="text" id="sdt" name="sdt" required />
    </div>

    <!-- Shipping and Payment Section -->
    <div>
        <label for="maptvc">Shipping Method</label>
        <select id="maptvc" name="maptvc" required>
            @foreach (var option in ViewBag.ShippingOptions as List<TapHoa.Data.Phuongthucvanchuyen>)
            {
                <option value="@option.Maptvc">@option.Tenptvc</option>
            }
        </select>

        <label for="maptth">Payment Method</label>
        <select id="maptth" name="maptth" required>
            @foreach (var method in ViewBag.PaymentMethods as List<TapHoa.Data.Phuongthucthanhtoan>)
            {
                <option value="@method.Mapttt">@method.Tenpttt</option>
            }
        </select>
    </div>

    <!-- Cart Summary Section -->
    <h3>Your Cart</h3>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Tensanpham</td>
                    <td>@item.Soluong</td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <strong>Total: </strong>
    </div>

    <button type="submit">Place Order</button>
</form>
