@model TapHoa.Data.Dondathang

<h2 class="title">Chi Tiết Đơn Đặt Hàng</h2>

<div class="order-detail">
    <h4>Đơn Đặt Hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Mã Đơn Hàng:</dt>
        <dd class="col-sm-9">@Model.Maddh</dd>

        <dt class="col-sm-3">Tên Khách Hàng:</dt>
        <dd class="col-sm-9">@Model.Tenkh</dd>

        <dt class="col-sm-3">Địa Chỉ:</dt>
        <dd class="col-sm-9">@Model.Diachi</dd>

        <dt class="col-sm-3">Số Điện Thoại:</dt>
        <dd class="col-sm-9">@Model.Sdt</dd>

        <dt class="col-sm-3">Ngày Đặt:</dt>
        <dd class="col-sm-9">@Model.Ngaydat.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Tổng Giá:</dt>
        <dd class="col-sm-9">@Model.Tonggia?.ToString("C")</dd>

        <dt class="col-sm-3">Trạng Thái:</dt>
        <dd class="col-sm-9">@Model.MattddhNavigation?.Tenttddh</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Trở Lại</a>

<style>
    /* Basic Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        color: #343a40;
        padding: 30px;
    }

    h2.title {
        margin-bottom: 20px;
        color: #007bff;
        text-align: center;
        font-size: 32px;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
    }

    .order-detail {
        max-width: 600px;
        margin: 20px auto; /* Center the detail section */
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h4 {
        margin-bottom: 15px;
        color: #495057;
        font-size: 24px;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
    }

    dt {
        font-weight: bold;
        color: #495057;
        margin-bottom: 10px;
    }

    dd {
        margin-bottom: 15px;
        color: #343a40;
        font-size: 16px;
        background-color: #f1f1f1;
        border-radius: 5px;
        padding: 10px 15px;
        border-left: 3px solid #007bff;
    }

    .btn {
        display: block; /* Make button full-width */
        width: 100%;
        margin-top: 20px;
        padding: 10px 15px;
        text-align: center;
        font-size: 16px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #fff;
        transition: background-color 0.3s;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }
</style>
