@model TapHoa.Data.Khachhang

<h2 class="text-2xl font-bold">Thêm Khách Hàng Mới</h2>

<form asp-action="Create" method="post" class="mt-4">
    <div class="mb-4">
        <label asp-for="Name" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Email" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="PhoneNumber" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="PhoneNumber" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Address" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Address" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Address" class="text-red-600 text-sm"></span>
    </div>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Thêm Mới</button>
</form>
