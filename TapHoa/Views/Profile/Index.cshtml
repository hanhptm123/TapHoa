@model TapHoa.Data.Khachhang

<h2 class="text-2xl font-bold">Thông Tin Cá Nhân</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-500 text-white p-4 rounded">
        @TempData["SuccessMessage"]
    </div>
}

<p><strong>Tên:</strong> @Model.Tenkh</p>
<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Số Điện Thoại:</strong> @Model.Sdt</p>
<p><strong>Địa Chỉ:</strong> @Model.Diachi</p>

<a asp-action="Edit" class="bg-blue-500 text-white px-4 py-2 rounded">Chỉnh Sửa Thông Tin</a>
