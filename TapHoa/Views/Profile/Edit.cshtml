@model TapHoa.Data.Khachhang

<h2 class="text-2xl font-bold">Sửa Thông Tin Cá Nhân</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-500 text-white p-4 rounded">
        @TempData["SuccessMessage"]
    </div>
}

<form asp-action="Edit" method="post" class="mt-4">
    <div class="mb-4">
        <label asp-for="Tenkh" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Tenkh" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Tenkh" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Email" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Email" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Sdt" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Sdt" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Sdt" class="text-red-600 text-sm"></span>
    </div>

    <div class="mb-4">
        <label asp-for="Diachi" class="block text-sm font-medium text-gray-700"></label>
        <input asp-for="Diachi" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm" />
        <span asp-validation-for="Diachi" class="text-red-600 text-sm"></span>
    </div>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Cập nhật</button>
</form>
