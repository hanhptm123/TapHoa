@model TapHoa.Data.Phieunhap

@{
    ViewData["Title"] = "Xóa Phiếu nhập";
}

<h2>Xóa Phiếu nhập</h2>

<h3>Bạn có chắc muốn xóa phiếu nhập này không?</h3>

<div>
    <h4>Phiếu nhập</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã Phiếu nhập
        </dt>
        <dd class="col-sm-10">
            @Model.Mapn
        </dd>
        <dt class="col-sm-2">
            Nhân viên
        </dt>
        <dd class="col-sm-10">
            @Model.ManvNavigation?.Tennv
        </dd>
        <dt class="col-sm-2">
            Ngày nhập
        </dt>
        <dd class="col-sm-10">
            @Model.Ngaynhap.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Tổng tiền
        </dt>
        <dd class="col-sm-10">
            @Model.Tongtien.ToString("C")
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Mapn" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
