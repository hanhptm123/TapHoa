@model TapHoa.Data.Loaisp
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ThemLoai";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm loại sản phẩm</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post"asp-action="ThemLoai">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tenloaisp" class="control-label">Tên loại sản phẩm</label>
                <input asp-for="Tenloaisp" class="form-control" />
                <span asp-validation-for="Tenloaisp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhMucLoaiSanPham">Trở lại</a>
</div>

