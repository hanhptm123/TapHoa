@using X.PagedList.Mvc.Core
@using X.PagedList
@model IEnumerable<TapHoa.Data.Loaisp>

@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DanhMucLoaiSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Danh mục loại sản phẩm</h3>

<p>
    <a asp-action="ThemLoai">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên loại sản phẩm
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tenloaisp)
            </td>
            <td>
                <a asp-action="SuaLoai" asp-route-Maloaisp="@item.Maloaisp">Edit</a> |
                <a asp-action="XoaLoai" asp-route-Maloaisp="@item.Maloaisp">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
