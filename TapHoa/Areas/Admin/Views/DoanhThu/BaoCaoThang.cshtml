@{
    ViewData["Title"] = "Báo cáo doanh thu theo tháng";
}

<h1>Báo cáo doanh thu theo tháng</h1>

<form method="get" action="/admin/doanhthu/baocaothang">
    <label for="thang">Tháng:</label>
    <select id="thang" name="thang">
        @for (int i = 1; i <= 12; i++)
        {
            <option value="@i" @(ViewBag.Thang == i ? "selected" : "")>@i</option>
        }
    </select>

    <label for="nam">Năm:</label>
    <input type="number" id="nam" name="nam" value="@ViewBag.Nam" min="2000" max="@DateTime.Now.Year" />

    <button type="submit">Xem</button>
</form>

@if (ViewBag.DoanhThu > 0)
{
    <h3>Kết quả</h3>
    <p>Tháng: @ViewBag.Thang / Năm: @ViewBag.Nam</p>
    <p>Tổng doanh thu: @ViewBag.DoanhThu.ToString("C")</p>
}
else
{
    <p>Không có dữ liệu doanh thu cho tháng/năm được chọn.</p>
}
